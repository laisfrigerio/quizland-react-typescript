{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@testing-library/jest-dom"], // Adiciona suporte a Jest
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@context/*": ["src/context/*"],
      "@icons/*": ["src/icons/*"],
      "@screens/*": ["src/screens/*"],
      "@styles/*": ["src/styles/*"],
      "@ui/*": ["src/ui/*"],
    }
  },
  "include": ["src", "jest.setup.ts", "tests"],
  "exclude": ["node_modules"]
}